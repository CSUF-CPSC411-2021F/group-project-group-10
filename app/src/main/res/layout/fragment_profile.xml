<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/profile_casket"
        android:background="@drawable/image_border"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_image_border"
        android:src="@drawable/face"
        app:layout_constraintEnd_toEndOf="@id/profile_casket"
        app:layout_constraintStart_toStartOf="@id/profile_casket"
        app:layout_constraintTop_toTopOf="@id/profile_casket"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_border"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/email_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/lobster"
        android:text="Email: "
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/email_firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Email holder*"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/email_direction"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/display_name_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lobster"
        android:text="Display Name: "
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/email_firebase"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/change_name"
        android:onClick="press_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/rename"
        app:layout_constraintTop_toBottomOf="@+id/email_firebase"
        app:layout_constraintLeft_toRightOf="@+id/display_name_direction"
        />

    <TextView
        android:id="@+id/display_name_firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Display holder*"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/display_name_direction"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>